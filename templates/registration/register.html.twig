{% extends 'base.html.twig' %}
{% form_theme registrationForm 'tailwind_2_layout.html.twig' %}

{% block title %}
  Register
{% endblock %}

{% block body %}
<div class="bg-gray-100 flex items-center justify-center h-screen">
<div class="bg-white shadow p-6 rounded-lg">
  <h2 class="text-2xl mb-4">Inscription</h2>
{{ form_start(registrationForm, {'attr': {'class': ''}}) }}
<div class="mb-4">
    {{ form_row(registrationForm.email, {
        'row_attr': {'class': 'mt-2 px-3'},
        'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
        'errors_attr': {'class': 'text-red-700'},
        'widget_attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500'},
        'disabled_attr': {'class': 'border-dashed text-gray-200'},
        'widget_errors_attr': {'class': 'border-double border-red-500 bg-red-50 px-3 py-2 rounded'},
    }) }}
</div>
<div class="mb-6">
    {{ form_row(registrationForm.plainPassword, {
        'row_attr': {'class': 'mt-2 px-3'},
        'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
        'errors_attr': {'class': 'text-red-700'},
        'widget_attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500'},
        'disabled_attr': {'class': 'border-dashed text-gray-200'},
        'widget_errors_attr': {'class': 'border-double border-red-500 bg-red-50 px-3 py-2 rounded'},
    }) }}
</div> 
    {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'text-gray-600'}}) }}
    
    <button type="submit" class="btn bg-blue-500 text-white px-4 py-2 rounded">
      Register
    </button>
{{ form_end(registrationForm) }}
<div class="flex items-center justify-center my-6">
    <hr class="border-gray-300 border-t-2 flex-grow">
    <span class="mx-4 text-gray-500 font-bold">OU</span>
    <hr class="border-gray-300 border-t-2 flex-grow">
</div>
<div class="flex items-center justify-center mb-4">
    <a href="{{path('connect_google_start')}}" class="flex items-center hover:bg-blue-400 text-white font-bold py-2 px-3 bg-blue-300 rounded-full focus:outline-none focus:shadow-outline">
    <svg class="w-6 h-6 text-gray-800 dark:text-white mr-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 19">
      <path fill-rule="evenodd" d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z" clip-rule="evenodd"/>
    </svg>    
    Continuer avec Google
    </a>
</div>
  </div>
</div>

{% endblock %}
