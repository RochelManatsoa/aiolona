{% extends 'base.html.twig' %}

{% block title %}
{{ 'menu.profile'|trans }}
{% endblock %}

{% block body %}

  <div class="bg-gray-100 flex justify-center " id="nav">
    <div class="w-full max-w-lg">
      {{ form_start(form,  {'attr': {'class': 'bg-white shadow-lg rounded p-8' }}
      ) }} 
            
      <div class="border-b border-gray-900/10 pb-12">
        <h2 class="text-base font-semibold leading-7 text-gray-900">
          {{ 'select.label'|trans }}                  
        </h2>
        <p class="mt-1 text-sm leading-6 text-gray-600">
          {{ 'select.intro'|trans }}                 
        </p>
        <div class="space-y-10">
          <div class="mt-4">
            {{ form_widget(form) }}
          </div>
        </div>
      </div>
      <button type="submit" class="w-full mt-10 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        {{ 'profile.create'|trans }}     
      </button>
      {{ form_end(form) }}
    </div>
  </div>

{% endblock %}
