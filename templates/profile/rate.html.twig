{% extends 'base.html.twig' %}

{% block title %}
{{ 'menu.profile'|trans }}
{% endblock %}

{% block body %}

  <div class="bg-gray-100 flex justify-center ">
    <div class="w-full max-w-lg">
      {{ form_start(form,  {'attr': {'class': 'bg-white shadow-lg rounded p-8' }}
      ) }} 
      
      <div class="border-b border-gray-900/10 pb-12">
        <h2 class="text-base font-semibold leading-7 text-gray-900">
        {{ 'rate.label'|trans }} 
        </h2>
        <p class="mt-1 text-sm leading-6 text-gray-600">
        {{ 'rate.intro'|trans }} 
        </p>
        <div class="mt-10 space-y-10">
          <div class="mt-6 space-y-6">
            {{form_widget(form)}}
          </div>
        </div>
      </div>
    <a class="mx-5" href="{{path('app_profile_overview')}}">
    {{ 'profile.skip'|trans }} 
    </a>
    <a href="{{path('app_profile_overview')}}" class="mt-10 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    {{ 'profile.next.overview'|trans }} 
