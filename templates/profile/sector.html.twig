{% extends 'base.html.twig' %}

{% block title %}
  Créer mon profil
  
{% endblock %}

{% block body %}

  <div class="bg-gray-100 flex justify-center " id="nav">
    <div class="w-full max-w-lg">
      {{ form_start(form,  {'attr': {'class': 'bg-white shadow-lg rounded p-8' }}
      ) }} 
            
      <div class="border-b border-gray-900/10 pb-12">
        <h2 class="text-base font-semibold leading-7 text-gray-900">
          Secteur                  
        </h2>
        <p class="mt-1 text-sm leading-6 text-gray-600">
          Veuillez indiquer votre secteur d'activité:                  
        </p>
        <div class="space-y-10">
          <div class="mt-4">
            {{ form_widget(form) }}
          </div>
        </div>
      </div>
      <a class="mx-5" href="{{ path('app_profile_ia') }}">
        Skip for now              
      </a>
      <button type="submit" class="mt-10 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Next, add your AI tools favorite              
      </button>
      {{ form_end(form) }}
    </div>
  </div>

{% endblock %}
