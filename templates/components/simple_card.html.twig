<div class="block p-6 rounded-lg shadow-lg bg-white max-w-sm">
    <a href="{{ url }}">
    <div class="flex">
        <div class="w-1/3 p-4">
            <img class="h-auto max-w-full rounded" src="{{ imgUrl }}" alt="Image de la card">
        </div>
        <div class="w-2/3 p-4">
            <h2 class="text-gray-900 text-xl leading-tight font-medium mb-2">{{ identity.firstName }} <br>{{ identity.lastName }}</h2>
        </div>
    </div>
	<p class="text-gray-700 text-base mb-4">
		Tarif journalier : â‚¬ {{ identity.tarif }}
	</p>
    {% for lang in identity.languages %}
    {{ isoToEmoji(lang.code) }}
    {% endfor %}

    {% for star in stars %}
        <p class="bg-gray-200 rounded-full px-3 my-2 text-xs font-base text-gray-700 mr-2">{{ star.name }}</p>
        <div class="flex items-center">
            {% for i in 1..5 %}
                {% if i <= star.note %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 1L12.39 6.75H19.78L14.76 10.25L17.17 16L10 12.75L2.83 16L5.24 10.25L0.22 6.75H7.61L10 1Z" />
                    </svg>
                {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 1L12.39 6.75H19.78L14.76 10.25L17.17 16L10 12.75L2.83 16L5.24 10.25L0.22 6.75H7.61L10 1Z" />
                    </svg>
                {% endif %}
            {% endfor %}
        </div>
    {% endfor %}
    </a>
</div>