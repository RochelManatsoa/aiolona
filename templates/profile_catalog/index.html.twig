{% extends 'base.html.twig' %}

{% block title %}
    Experts    
{% endblock %}

{% block body %}
<div class="bg-gray-100 min-h-screen">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">
            Experts
        </h1>   

        <div class="flex">
            <div class="w-3/5 lg:w-2/3 bg-white rounded-lg p-4 shadow-md mr-2">
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                {% for identity in identities %}
                    <div class="max-w-sm rounded overflow-hidden shadow-lg">
                        <img class="w-full" src="{{vich_uploader_asset(identity, 'file')}}" alt="Image de la card">
                        <div class="px-6 py-4">
                            <div class="font-bold text-xl mb-2">{{ identity.firstName }} {{ identity.lastName }}</div>
                            <p class="text-gray-700 text-xs">
                                Tarif moyenne journalier: <br> <span class="font-bold">â‚¬ {{ identity.tarif / 100}}</span>
                            </p>
                        </div>
                        <div class="px-6 py-4">
                            {% for aicore in identity.aicores %}
                            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-base text-gray-700 mr-2">{{ aicore.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                </div>
                <nav class="flex items-center justify-center mt-4">
                {% do identities.setPageRange(2) %}
                {{ knp_pagination_render(identities, 'base/pagination.html.twig')}}
                </nav>

            </div>
            <div class="w-2/5 lg:w-1/3 bg-white rounded-lg p-4 shadow-md">

            </div>
        </div>
    </div>
</div>

{% endblock %}
    