{% extends 'layout.html.twig' %}

{% block title %}
    Experts    
{% endblock %}

{% block body %}
<!-- Hero section with background image, heading, subheading and button -->
<div
class="relative overflow-hidden bg-cover bg-no-repeat"
style="
  background-position: 50%;
  background-image: url('https://tecdn.b-cdn.net/img/new/slides/146.webp');
  height: 350px;
">
<div
  class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-fixed"
  style="background-color: rgba(0, 0, 0, 0.75)">
  <div class="flex h-full items-center justify-center">
    <div class="px-6 text-center text-white md:px-12">
      <h1 class="mb-6 text-5xl font-bold">Trouvez des experts en IA </h1>
      <button
        type="button"
        class="inline-block rounded border-2 border-neutral-50 px-6 pb-[6px] pt-2 text-xs font-medium uppercase leading-normal text-neutral-50 transition duration-150 ease-in-out hover:border-neutral-100 hover:bg-neutral-500 hover:bg-opacity-10 hover:text-neutral-100 focus:border-neutral-100 focus:text-neutral-100 focus:outline-none focus:ring-0 active:border-neutral-200 active:text-neutral-200 dark:hover:bg-neutral-100 dark:hover:bg-opacity-10"
        data-te-ripple-init
        data-te-ripple-color="light">
        Get started
      </button>
    </div>
  </div>
</div>
</div>

<div class="container mx-auto bg-[#FBFBFB]">
  <div class="md:flex gap-6">
    <div class="md:w-3/12 p-8">
        <h2 class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">Trouvez des experts en IA rapidement</h2>
        {% include "base/_filter.html.twig" with {form : form} %}
    </div>
    <div class="md:w-9/12 p-8">
        <div class="tracking-wide text-sm text-indigo-500 font-semibold">Experts</div>
        <div class="flex flex-wrap justify-center space-x-4 space-y-4">
        {% for identity in identities %}
            {{ component('simple_card',{
                    identity: identity,
                    url: path('app_profile_expert', {'username' : identity.username} ),
                    stars: getStars(identity),
                    imgUrl: vich_uploader_asset(identity, 'file')
                })
            }}
        {% endfor %}
        </div>

        <nav class="flex items-center justify-center mt-4">
        {% do identities.setPageRange(2) %}
        {{ knp_pagination_render(identities, 'base/pagination.html.twig')}}
        </nav>
    </div>

  </div>
</div>



{% endblock %}
    